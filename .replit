
modules = ["nodejs-20", "web", "postgresql-16"]
run = "npx live-server --port=5000 --host=0.0.0.0"

[nix]
channel = "stable-25_05"
packages = ["static-web-server", "file"]

[deployment]
publicDir = "/"
deploymentTarget = "static"
build = ["sh", "-c", "npm run build"]

[workflows]
runButton = "Full Stack (Separated)"

[[workflows.workflow]]
name = "TableLink Server"
author = 41585131
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pkill -f \"node.*server\" || true"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "sleep 2"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm install"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node src/server.js"

[[workflows.workflow]]
name = "Full Stack Dev"
author = 41585131
mode = "parallel"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node src/server.js"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"

[[workflows.workflow]]
name = "React Dev"
author = 41585131
mode = "parallel"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node src/server.js"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"

[[workflows.workflow]]
name = "Full Stack (Separated)"
author = 41585131
mode = "parallel"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd backend && npm install && node server.js"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd frontend && npm install && npm run dev"

[[workflows.workflow]]
name = "React Only"
author = 41585131
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd frontend && npm install && npm run dev"


modules = ["bash", "nodejs-20", "web", "postgresql-16"]
run = "node src/server.js"

[nix]
channel = "stable-25_05"
packages = ["static-web-server", "file"]

[deployment]
publicDir = "/"
deploymentTarget = "static"
run = ["sh", "-c", "node src/server.js"]

[[ports]]
localPort = 5000
externalPort = 80

[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "TableLink Server"

[[workflows.workflow]]
name = "TableLink Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm start"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"
